{{ template "partials/loop11" . }}
<div class="page-intro background--gallery">
   <div class="wrapper">
      <div class="col-wrap">
         <div class="col">
            {{ template "partials/breadcrumb" . }}
            <h1 class="page-intro__title margin-bottom--4">
               <strong>{{ .Metadata.Title }}</strong>
            </h1>
         </div>
      </div>
   </div>
</div>
<div class="wrapper adjust-font-size--16 link-adjust">
   <div class="col-wrap padding-top--2 margin-bottom--4">
      <div class="col">
         {{range $i, $version := $.Data.Versions}}
            <div>
            <a href="{{.VersionURL}}"><h2 class="margin-bottom--1 font-weight-700">{{.Title}}</h2></a>
               <p class="margin-top--0 margin-bottom--0 padding-top--0 padding-bottom--0">
                  Version: {{.VersionNumber}} {{if .IsLatest}}(latest){{end}}
               </p>
               <p class="margin-top--0 margin-bottom--0 padding-top--0 padding-bottom--0">
                  Revision date: {{dateFormat .Date}}
               </p>
               <p class="margin-top--3 margin-bottom--0 padding-top--0 padding-bottom--0">
                  <strong>Downloads:</strong>
                  <ul class="margin-top--0 padding-left--2">
                     {{range .Downloads}}
                        <li class="margin-top--0 margin-bottom--0 padding-top--0 padding-bottom--0">
                           <a href="{{.URI}}">{{.Extension}} {{humanSize .Size}}</a>
                        </li>
                     {{end}}
                  </ul>
                  {{if .Superseded}}
                     <details role="group" class="margin-bottom--4">
                        <summary role="button" aria-controls="details-content-0">
                           <span class="summary underline-link ">Corrections</span>
                        </summary>
                        <div class="panel padding-top--1 padding-bottom--1 margin-bottom-2" id="details-content-0">
                        {{if .Corrections}}
                           {{ range $i, $correction := .Corrections }}
                              <h3 class="margin-top--1 margin-bottom--2 padding-top--0 padding-bottom--0 font-weight-700">
                                 Correction: {{dateFormat .Date}}
                              </h3>
                              <p class="margin-top--0 margin-bottom--2">{{.Reason}}</p>
                           {{ end }}
                        {{ end }}
                        <a href="{{$version.Superseded}}">View superseded version</a>
                        </div>
                     </details>
                  {{ end }}
            </div>
            {{if last $i $.Data.Versions}}{{else}}<hr>{{ end }}
         {{end}}
        </div>
    </div>
</div>
