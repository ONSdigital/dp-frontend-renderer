<div class="slate background--gallery">
    <div class="wrapper">
        <nav class="breadcrumb">
            <ol class="breadcrumb__list">
                <li class="breadcrumb__item">
                    <a class="breadcrumb__link" href="https://www.ons.gov.uk/">Home</a>
                </li>
                <li class="breadcrumb__item">
                    <a class="breadcrumb__link" href="/geography">Geography</a>
                </li>
                <li class="breadcrumb__item">
                    <a class="breadcrumb__link" href="/geography/{{$.Metadata.Title}}">{{$.Metadata.Title}}</a>
                </li>
                <li class="breadcrumb__item">
                    {{$.DatasetTitle}}
                </li>
            </ol>
        </nav>
    <h1 class="font-weight-700 margin-bottom--0">{{.DatasetTitle}}</h1><div class="margin-bottom--6">{{.DatasetId}}</div>
    </div>

</div>
<div class="wrapper area-type-list">
    <div class="margin-bottom--2"></div>
    {{if .Data.Items}}
    <h2 class="font-weight-700">Statistics</h2>
    {{ range $i, $v := .Data.Items }}{{if $v.Label}}
        <div class="background--gallery padding-top--2 padding-bottom--2 padding-right--1 padding-left--1 margin-bottom--2">
            <h3 class="margin-top--0"><a class="area-type" id="area-type-{{$i}}" href="https://beta.ons.gov.uk/datasets/{{$v.ID}}/editions/time-series/versions/1">{{$v.Label}}</a></h3>{{$v.Text}}
        </div>
    {{end}}{{end}}{{else}}
    <h2 class="font-weight-700 background--gallery padding-top--2 padding-bottom--2 padding-right--1 padding-left--1 margin-bottom--2">No statistics available for this dataset</h2>
    {{end}}
    <h2 class="font-weight-700">Attributes</h2>
    Code: {{.DatasetId}}
</div>
