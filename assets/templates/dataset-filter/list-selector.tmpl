<div class="adjust-font-size--16">
	<div class="page-intro">
		<div class="wrapper">
			<div class="col-wrap">
				<div class="col">
					{{ template "partials/breadcrumb" . }}
					<div class="col col--md-47 col--lg-39">
						<h1 class="page-intro__title font-weight-700">Age</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
  <div class="page-content underline-all-links">
	  <div class="wrapper">
	      <div class="col-wrap">
					<div class="col">
						<div class="col col--md-47 col--lg-59">
							<div class="col col--md-29 col--lg-29">
								<details role="group" class="margin-bottom--4">
								  <summary><span class="summary">Learn more about range</span></summary>
								  <div class="panel">
								  	<h3 class="margin-bottom--0 w-700">Some title</h3>
								    <p class="margin-top--0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris vitae rhoncus diam. Vivamus non massa libero. Nulla non maximus sem. Fusce id vestibulum libero.</p>
								  </div>
								</details>
							</div>
							<form class="form adjust-font-size--16 clear-left" action="/filters/{{.FilterID}}/dimensions">
								<div class="col col--md-29 col--lg-29">
									<div class="checkbox margin-bottom--4">
										<input type="checkbox" class="checkbox__input" id="{{ $.Data.AddAllInRange.Label }}" name="{{ $.Data.AddAllInRange.Label }}" value="{{ $.Data.AddAllInRange.Label }}" checked>
										<label class="checkbox__label" for="{{ $.Data.AddAllInRange.Label }}">
											{{ $.Data.AddAllInRange.Label }}
										</label>
									</div>
										<div class="margin-bottom--8">
											<fieldset>
												<legend>
													<span class="block padding-bottom--2"><span class="font-size--17">Add from list  or</span> <a href="{{.Data.AddFromRange.URL}}">{{.Data.AddFromRange.Label}}</a> </span>
												</legend>
												<div class="checkbox-group">
													{{ $val := .Data.FiltersAmount }}
													{{ range $i, $v := loop $.Data.RangeData.StartNum $.Data.RangeData.EndNum }}
													<div class="checkbox">
														<input type="checkbox" class="checkbox__input" id="id-{{$v}}" name="{{$v}}" value="{{$v}}">
														<label class="checkbox__label" for="id-{{$v}}">
															{{$v}}
														</label>
													</div>
													{{end}}
												</div>
											</fieldset>
											<div class="margin-top js-hidden">
												<input type="submit" value="Add selected filters" class="btn btn--secondary btn--focus font-weight-700 font-size--17 text-wrap">
											</div>
											<div class="margin-bottom--8 margin-top--2">
												<a href="{{.Data.SaveAndReturn.URL}}" class="btn btn--primary btn--thick btn--wide btn--big btn--focus margin-right--2 font-weight-700 font-size--17 text-wrap">Return to filter options</a>
						            <a class="inline-block margin-top--4 font-size--17" href="{{.Data.Cancel.URL}}">Cancel</a>
											</div>
										</div>
									</div>
									<aside>
										<div class="col col--md-14 col--lg-20 margin-left-md--4 margin-bottom--6 margin-left-lg--10">
										  <div class="margin-bottom--6 hide--sm">
												<a href="{{.Data.SaveAndReturn.URL}}" class="btn btn--primary btn--thick btn--wide btn--big btn--focus margin-right--2 font-weight-700 font-size--17 text-wrap full-width">Return to filter options</a>
										  </div>
											{{ template "partials/filter-selection" . }}
										</div>
								</aside>
							</form>
          	</div>
					</div>
				</div>
  		</div>
		</div>
</div>
