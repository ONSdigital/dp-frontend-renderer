<div class="filter-selection">
  <header>
    <div class="filter-selection__header">
      <h2><span class="font-size--21">{{ len .Data.FiltersAdded }}</span> added</h2>
      {{ $val := len .Data.FiltersAdded }}
      {{ if ne $val 0 }}
      <a class="remove-all js-filter" href="{{ .Data.RemoveAll.URL }}">Remove all</a>
      {{ end }}
    </div>
  </header>
  <ul class="list list--neutral">
    {{ range .Data.FiltersAdded }}
    <li><span class="col col--md-6 col--lg-12">{{ .Label }}</span><span class="remove-link js-filter"><a id="{{.ID}}" href="{{ .RemoveURL }}">Remove</a></span></li>
    {{ end }}
  </ul>
</div>
