<div class="slate background--grey5">
    <div class="wrapper">
        {{ template "partials/breadcrumb" . }}
        <h1 class="font-weight-700">{{.Metadata.Title}}</h1>
    </div>
</div>
<div class="wrapper">
    <h2 class="margin-bottom--2 font-weight-700">Area types</h2>
    {{ range $i, $v := .Data.Items }}
        {{if $v.Label}}
            <div class="background--grey5 padding-top--2 padding-bottom--2 padding-right--1 padding-left--1 margin-bottom--2">
                <h3 class="margin-top--0"><a class="area-type" id="area-type-{{$i}}" href="{{$v.URI}}">{{$v.Label}}</a></h3>
            </div>
        {{end}}
    {{end}}
</div>
