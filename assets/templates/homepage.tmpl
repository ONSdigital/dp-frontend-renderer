{{ $Population := (index .Data.MainFigures 0) }}
{{ $Inflation := (index .Data.MainFigures 1) }}
{{ $GDP := (index .Data.MainFigures 2) }}
{{ $EmploymentRate := (index .Data.MainFigures 3) }}
{{ $UnemploymentRate := (index .Data.MainFigures 4) }}
<div class="page-content">
    {{ template "partials/banners/covid" . }}
    <div class=wrapper>
        <div col-wrap>
                <h1 class="col col--lg-12 col--md-12 margin-top--0 margin-bottom--0 margin-right--0 margin-left--0 font-size--30">
                    Main
                    figures</h1><span class="hide--sm font-size--18 line-height--56"> â€“  </span><span
                    class="tile__link margin-left--0 line-height-lg--56 line-height-md--56"><a
                    href="https://www.ons.gov.uk/timeseriestool">From our time series explorer</a></span>
            <!--desktop-->
            <div class="hide--sm">
                <div class="col col--lg-29 col--md-29 tile margin-right--1">
                    <div class="margin-top--1"><h2><span class="tile__title">Employment rate</span></h2></div>
                    <div class="margin-top-md--2 margin-top-lg--2">Aged 16 to 64 seasonally adjusted ({{ $EmploymentRate.Date }})</div>
                    <div class="col col--lg-12 col--md-12">
                        <div class="margin-top--1">Employed</div>
                        <div class="tile__figure">{{ $EmploymentRate.Figure }}{{ $EmploymentRate.Unit }}</div>
                        <div class="tile__trend">
                            <span class="tile__trend__icon">
                            {{if $EmploymentRate.Trend.IsUp}}&uarr;{{ end }}
                            {{if $EmploymentRate.Trend.IsDown}}&darr;{{ end }}
                            {{if $EmploymentRate.Trend.IsFlat}}={{ end }}
                            </span><span class="tile__trend__text">{{ $EmploymentRate.TrendDescription }}</span>
                        </div>
                        <div class="margin-top--2">
                            <span class="tile__link"><a href="{{ $EmploymentRate.FigureURIs.Analysis }}">Analysis</a></span>
                            <span class="tile__link"><a href="{{ $EmploymentRate.FigureURIs.Data }}">Data</a></span>
                        </div>
                    </div>
                    <div class="col tile__split-bar print--hide hide--md hide--lg"></div>
                    <div class="col padding-left-lg--2 padding-left-md--2 col--lg-12 col--md-12">
                        <div class="margin-top--1">Unemployed</div>
                        <div class="tile__figure">{{ $UnemploymentRate.Figure }}{{ $UnemploymentRate.Unit }}</div>
                        <div class="tile__trend">
                            <span class="tile__trend__icon">
                            {{if $UnemploymentRate.Trend.IsUp}}&uarr;{{ end }}
                            {{if $UnemploymentRate.Trend.IsDown}}&darr;{{ end }}
                            {{if $UnemploymentRate.Trend.IsFlat}}={{ end }}
                            </span><span class="tile__trend__text">{{ $UnemploymentRate.TrendDescription }}</span>
                        </div>
                        <div class="margin-top--2">
                            <span class="tile__link"><a href="{{ $UnemploymentRate.FigureURIs.Analysis }}">Analysis</a></span>
                            <span class="tile__link"><a href="{{ $UnemploymentRate.FigureURIs.Data }}">Data</a></span>
                        </div>
                    </div>
                </div>
                <div class="tile col col--lg-14 col--md-14 margin-right--1">
                    <div class=tile__content>
                        <div class="margin-top--1"><h2><span class="tile__title">Inflation</span></h2></div>
                        <div class="margin-top--2">CPIH 12-month rate</div>
                        <div class="margin-top--1">{{ $Inflation.Date }}</div>
                        <div class="tile__figure">{{ $Inflation.Figure }}{{ $Inflation.Unit }}</div>
                        <div class="tile__trend"><span class="tile__trend__icon">
                        {{if $Inflation.Trend.IsUp}}&uarr;{{ end }}
                        {{if $Inflation.Trend.IsDown}}&darr;{{ end }}
                        {{if $Inflation.Trend.IsFlat}}={{ end }}
                        </span><span class="tile__trend__text">{{ $Inflation.TrendDescription }}</span>
                        </div>
                        <div class="margin-top--2"><span class="tile__link"><a href="{{ $Inflation.FigureURIs.Analysis }}">Analysis</a></span> <span
                                class="tile__link"><a href="{{ $Inflation.FigureURIs.Data }}">Data</a></span>
                        </div>
                    </div>
                </div>
                <div class="tile col col--lg-14 col--md-14 margin-top-md--2 margin-top-lg--2">
                    <div class=tile__content>
                        <div class="margin-top--1"><h2><span class="tile__title">GDP</span></h2></div>
                        <div class="margin-top--2">Quarter on Quarter</div>
                        <div class="margin-top--1">{{ $GDP.Date }}</div>
